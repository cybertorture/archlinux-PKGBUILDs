#
# Reverting version because of glib 2.35 requirement
#

pkgname=gnome-photos-git
pkgver=20121211
pkgrel=3
pkgdesc="Photos - access, organize and share your photos on GNOME"
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL2')
depends=('gtk3' 'tracker' 'libtracker-sparql')
makedepends=('git' 'gnome-common' 'intltool')
optdepends=()
provides=('gnome-photos')
conflicts=('gnome-photos')
install=gnome-photos.install

_gitroot=git://git.gnome.org/gnome-photos
_gitname=gnome-photos

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin master ; git checkout 992c39d61dcb942e7677692196db2081e78799b6
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" ; git checkout 992c39d61dcb942e7677692196db2081e78799b6
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" install
}

